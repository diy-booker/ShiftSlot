<div class="container">
  <div class="row">
    <div class="col">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2 class="panel-title">
            Sign up for an organization
          </h2>
        </div>
        <div class="panel-body">
          <%= form_tag user_assignments_path(@user.id), method: :post do |f| %>
            <%= hidden_field_tag "user_id", @user.id %>
            <%= select_tag("organization_id", options_for_select(@orgs.map {|o| [o.name, o.id] }),include_blank: 'select an organiztion', class: 'form-control btn btn-default', required: true) %>
            <%= submit_tag %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
