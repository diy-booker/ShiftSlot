<div class="container">
  <div class="row">
    <h2 class='panel-title'>Upcoming Shows for <%= @org.name %></h2>
    <div class="col-12-lg">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to 'Sync with Google Calendar', organization_callback_path(@org), class: 'btn btn-primary' %>
        </div>
          <% if flash[:errors] %>
          <div class='panel panel-danger'>
            <div class="panel-heading">
              <h4>Some shows were not added</h4>
            </div>
            <% flash[:errors].each do |error| %>
              <p>
                <%= error %>
              </p>
            <% end %>
          </div>
          <% end %>
        <div class="panel-body">
          <%= month_calendar events: @shows do |date, shows| %>
            <%= date %>
            <% shows.each do |show| %>
              <% if show.staffed? %>
              <div>
                <%= link_to "#{show.headliner} @ #{show.venue.name}", organization_show_path(show, show.organization), class: 'green' %>
              </div>
              <% else %>
              <div>
                <%= link_to "#{show.headliner} @ #{show.venue.name}", organization_show_path(show, show.organization), class: 'red' %>
              </div>
              <% end %>
            <% end %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
