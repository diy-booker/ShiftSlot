<div class="container">
  <div class="row">
    <% if current_user %>
      <h3>
        Dashboard
      </h3>
      <div class="col-lg-6">
        <div class="panel-info">
          <div class="panel-heading">
            <h3 class=panel-title>
              My Upcoming Shifts
            </h3>
          </div>
          <div class="panel-body">
            <div class="list-group">
              <% current_user.shows.each do |show| %>
                <div class="list-group-item">
                  <% show.shifts.each do |shift| %>
                    <% if shift.user_id == current_user.id %>
                      <%= shift.job.title %>
                    <% end %>
                  <% end %>
                  <%= link_to "#{show.date}: #{show.headliner} @ #{show.venue.name}", show_path(show) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel-success">
          <div class="panel-heading">
            <h3 class='panel-title'>
              Upcoming Available Shifts
            </h3>
          </div>
          <div class="panel-body">
              <% @shows.each do |show| %>
                <% show.shifts.each do |shift| %>
                  <% if current_user.authorized?(shift.job) && !shift.user_id %>
                    <div class="list-group-item">
                      <h4 class='list-group-item-heading'>
                        <%= shift.job.title %>
                      </h4>
                      <%= link_to "#{show.date}: #{show.headliner} @ #{show.venue.name}", show_path(show) %>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class='jumbotron'>
        <h1>Welcome to ShiftSlot</h1>
        <p>
          ShiftSlot is a place for volunteers and workers to sign up for shifts at some Seattle music venues. <%= link_to 'Sign in', user_session_path %> or <%= link_to 'Sign up', new_user_registration_path %> above to get started.
        </p>
      </div>
    <% end %>
  </div>
</div>
