<!DOCTYPE html>
<html>
  <head>
    <title>ShiftSlot</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Bowlby+One+SC" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">


  </head>
  <body>
        <div class="navbar navbar-inverse bg-inverse" id="navbarToggleExternalContent">
          <div class='navbar-header'>
            <span class='navbar-brand' id="title">ShiftSlot</span>
            <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
          </div>
          <div class='navbar-collapse collapse'>
            <ul class="nav navbar-nav">
              <% if current_user %>
              <% if current_user.admin %>
              <li class="nav-item">
                <%= link_to 'Workers', users_path, class: 'nav-link'  %>
              </li>
              <% end %>
              <li class="nav-item">
                <%= link_to 'Venues', venues_path, class: 'nav-link' %>
              </li>
              <ul class='nav navbar-nav navbar-right'>
                <li class="nav-item">
                  <%= link_to current_user.email, user_path(current_user.id) %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Logout', destroy_user_session_path, method: 'DELETE', class: 'nav-link'  %>
                </li>
              </ul>
              <% else %>
              <li>
                <%= link_to 'Sign in', new_user_session_path %>
              </li>
              <li>
                <%= link_to 'Sign up', new_user_registration_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
        <%= yield %>
  </body>
</html>
