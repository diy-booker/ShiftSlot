<div class="navbar navbar-toggleable-md navbar-inverse bg-inverse" id="navbarToggleExternalContent">
  <div class='navbar-header'>
    <a class='navbar-brand' href='/' id="title">ShiftSlot</a>
    <a class="navbar-toggle" data-toggle="collapse" data-target="#collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
  </div>
  <div class='navbar-collapse collapse' id='collapse'>
    <ul class="nav navbar-nav">
      <% if current_user %>
        <li class='nav-item'>
        </li>
        <li class="dropdown">
          <a href='#' class='dropdown-toggle', data-toggle='dropdown' role='button' aria-haspopup='true', aria-expanded='false'>My Organizations <span class="caret"></span></a>
          <ul class='dropdown-menu'>
            <% current_user.organizations.each do |org| %>
              <li>
                <% if current_user.admin?(org.id) %>
                <li class='dropdown-header'>
                  <%= org.name %>
                </li>
                <li> <%= link_to 'Shows Month Calendar', organization_calendar_path(org) %> </li>
                <li> <%= link_to 'Dashboard', organization_path(org) %> </li>
                <% else %>
                  <%= link_to org.name, organization_calendar_path(org) %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
        <ul class='nav navbar-nav navbar-right'>
          <li class="nav-item">
            <%= link_to current_user.email, user_path(current_user.id) %>
          </li>
          <li class="nav-item">
            <%= link_to 'Logout', destroy_user_session_path, method: 'DELETE', class: 'nav-link'  %>
          </li>
        </ul>
      <% end %>
    </ul>
  </div>
</div>
