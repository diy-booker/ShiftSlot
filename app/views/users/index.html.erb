<div class="container">
    <div class="row">
        <div class="col">
            <div class="panel panel-warning">
                <div class="panel panel-heading">
                    <h2 class='panel-title'>Workers</h2>
                </div>
                <table class='table'>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Authorized Jobs
                        </th>
                        <th>
                            Preferred/<div class="red">Unavailable</div>
                        </th>
                    </tr>
                    <% @users.each do |user| %>
                      <tr>
                        <td>
                            <%= link_to user.name, user_path(user.id) %>
                        </td>
                        <td>
                            <div class='list-group'>
                              <% user.venues.each do |venue| %>
                                <div class="list-group-item">
                                  <h4 class="list-group-item-heading">
                                    <%= link_to venue.name, venue_path(venue) %>
                                  </h4>
                                  <% user.jobs.each do |job| %>
                                    <div class='list-group-item-text'>
                                      <%= job.title %>
                                    </div>
                                  <% end %>
                                </div>
                              <% end %>
                            </div>
                        </td>
                        <%= render partial: 'preferred_days/index', locals: {user: user}%>
                      </tr>
                    <% end %>
                </table>
            </div>

        </div>
    </div>

</div>
