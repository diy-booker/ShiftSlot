<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <% if @org %>
          <h2>Log in to <%= @org.name %></h2>
        <% else %>
          <h2>Log in</h2>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: sessions_path) do |f| %>
        <% if @org %>
          <div>
            <%= hidden_field_tag 'user[organization_id]', @org.id %>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, required: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", required: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
<%= render "devise/shared/links" %>
</div>
